<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="false"><shape>
            <solid android:color="#bad1ff" />
            <padding android:left="10dp" android:right="10dp" />
        </shape></item>
        
    <!-- Unpressed State -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false"><shape>
            <solid android:color="#00FFFFFF" />
            <padding android:left="10dp" android:right="10dp" />
        </shape></item>
</selector>